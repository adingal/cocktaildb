{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "layout/*": ["./src/layout/*"],
      "theme/*": ["./src/theme/*"],
      "atoms/*": ["./src/atoms/*"],
      "store/*": ["./src/store/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
